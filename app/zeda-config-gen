#!/bin/sh

INCLUDE=
LIB=
LINK=
VERSION=

while [ "$1" != "" ]
do
  case $1 in
  -I)
    shift; INCLUDE=$1; shift
    ;;
  -L)
    shift; LIB=$1; shift
    ;;
  -l)
    shift; LINK=$1; shift
    ;;
  -v)
    shift; VERSION=$1; shift
    ;;
  *)
    ;;
  esac
done

echo "#This script was automatically generated by zeda-config-gen in ZEDA."
echo "#"`date` "by "`whoami`

echo "#!/bin/sh"
echo "case \$1 in"
if [ "$INCLUDE" != "" ]; then
  echo "-I)"
  echo "  echo -I$INCLUDE"
  echo "  ;;"
fi
if [ "$LIB" != "" ]; then
  echo "-L)"
  echo "  echo -L$LIB"
  echo "  ;;"
fi
if [ "$LINK" != "" ]; then
  echo "-l)"
  echo "  echo $LINK"
  echo "  ;;"
fi
if [ "$VERSION" != "" ]; then
  echo "-v)"
  echo "  echo $VERSION"
  echo "  ;;"
fi
echo "*)"
echo "  ;;"
echo "esac"
echo "exit 0"
